.contain-to-grid
  %nav.top-bar
    .top-bar-left
      %ul.menu
        %li.menu-text Magnificent Time Clock
        - if current_user
          - current_user.reports.each do |r|
            %li= link_to r.name, r

    .top-bar-right
      %ul.menu
        - if user_signed_in?
          %li= link_to 'Edit account', edit_user_registration_path, class: 'nav-link'
          %li= link_to 'Sign out', destroy_user_session_path, :method=>'delete', class: 'nav-link'
        - else
          %li= link_to 'Sign in', new_user_session_path, class: 'nav-link'
          %li= link_to 'Sign up', new_user_registration_path, class: 'nav-link'
